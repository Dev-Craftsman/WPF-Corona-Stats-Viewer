<Window x:Class="MyCoronaStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"        xmlns:local="clr-namespace:MyCoronaStats"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <StackPanel>
                <Button Command="{Binding CollectDataCommand}" Margin="3" Padding="3">Collect Data</Button>
                <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Margin="3" Padding="3"/>
            </StackPanel>
        </WrapPanel>
        <oxy:PlotView Grid.Row="1" Model="{Binding OxyPlotModelCommulated}" />
        <oxy:PlotView Grid.Row="2" Model="{Binding OxyPlotModelDaily}" />
    </Grid>
</Window>
