<Window x:Class="MyCoronaStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"        xmlns:local="clr-namespace:MyCoronaStats"
        mc:Ignorable="d"
        Title="Corona - Data - Viewer" Height="750" Width="1200">
	<Grid IsEnabled="{Binding MainGridIsEnabled}">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<WrapPanel Grid.Row="0">
			<StackPanel MinWidth="200">
				<ProgressBar Value="{Binding CollectDateProgress}" Margin="3" Height="24" Visibility="{Binding ProgressBarVisbility}"/>
				<Button Command="{Binding CollectDataCommand}" Margin="3" Padding="3" Visibility="{Binding CollectDataButtonVisbility}">Collect Data</Button>
				<ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Margin="3" Padding="3" Visibility="{Binding CountrySelectVisbility}"/>
			</StackPanel>
		</WrapPanel>
		<oxy:PlotView Grid.Row="1" Model="{Binding OxyPlotModelCommulated}" />
		<oxy:PlotView Grid.Row="2" Model="{Binding OxyPlotModelDaily}" />
	</Grid>
</Window>
